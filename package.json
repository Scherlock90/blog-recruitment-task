{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "eject": "react-scripts eject",
    "clean": "rimraf dist",
    "clean:lock": "rimraf yarn.lock",
    "clean:nodemodules": "rimraf node_modules",
    "lint": "eslint --fix --ext .ts,.tsx .",
    "lint:fix": "yarn lint --write",
    "lint:watch": "yarn lint --quiet",
    "prettier": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|css|md)\"",
    "prettier:watch": "onchange \"**/*.+(js|jsx|ts|tsx|json|css|md)\" -- prettier --write {{changed}}"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.config.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "npm run --silent lint:fix",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
